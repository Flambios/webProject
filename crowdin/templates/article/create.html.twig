{% extends 'base.html.twig' %}
{% block body %}
<h1>Create new article</h1>
    {{ form_start (formArticle) }}

    <div class="form-group">
        <label for="">Titre</label>
        {{ form_widget(formArticle.title, {'attr' : {'placeholder' : "Titre de l'article"}}) }}
    </div>

    <div class="form-group">
        <label for="">Contenu</label>
        {{ form_widget(formArticle.content, {'attr' : {'placeholder' : "Titre de l'article"}}) }}
    </div>

    <div class="form-group">
        <label for="">Image</label>
        {{ form_widget(formArticle.image, {'attr' : {'placeholder' : "Titre de l'article"}}) }}
    </div>

    <button type="submit" class="btn btn-success">Ajouter article</button>

    {{ form_end (formArticle) }}

{% endblock %}

